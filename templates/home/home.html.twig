{% extends 'base.html.twig' %}

{% block title %}HelloCiné{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('home_home') }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('home_home') }}
{% endblock %}

{% block body %}
    <div class='main-center'>
        <div id="carouselEx" class="carousel slide" data-ride="carousel">
            <div class="carousel-inner">
                <div class="carousel-item active">
                <img class="d-block w-100" src="{{ asset('image/filmGuardian.jpg') }}" alt="First slide">
                </div>
                <div class="carousel-item">
                <img class="d-block w-100" src="{{ asset('image/film2.jpg') }}" alt="Second slide">
                </div>
                <div class="carousel-item">
                <img class="d-block w-100" src="{{ asset('image/DE_GAULLE.jpg') }}" alt="Third slide">
                </div>
            </div>
            <a class="carousel-control-prev" href="#carouselEx" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselEx" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
        <div class='container'>
            <div class='row'>
                {% for film in films %}
                    <div class='film'>
                        <div class='logo-film'></div>
                        <div class='contenu'>
                            <strong>Titre:</strong>
                            <p>{{film.titre}}</p>
                            <strong>Date de sortie:</strong>
                            <p>{{film.dateDeSortie|date('d/m/Y')}}</p>
                            <strong>Durée:</strong>
                            <p>{{film.duree|date('h:i')}}</p>
                            <strong>Genre:</strong>
                            <p>{{film.genre}}</p>
                            <div>
                                <a href='{{ path('homecritique', {'id':film.id}) }}' class='button-modif-voir'>Voir critiques</a>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
        <div>
            <a href='{{ path('film')}}' class='button-add' type='button'>Ajouter</a>
        </div>
        <div class='coming-soon'>
            <h3 id='coming-soon'>More features coming soon</h3>
        </div>
    </div>
{% endblock %}
